<section class="form-auth text-center">
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %> <br>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Send me reset password instructions</button>  
  <% end %>

  <%= render "devise/shared/links" %>
</section>